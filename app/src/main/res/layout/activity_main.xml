<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/label_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:text="@string/type"/>

            <Spinner
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:entries="@array/type" />

            <TextView
                android:id="@+id/label_bedRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:text="@string/bedRoom"/>

            <EditText
                android:id="@+id/bedRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:ems="10"
                android:inputType="number"
                android:autofillHints="no"
                />

            <TextView
                android:id="@+id/label_furniture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:text="@string/furniture"/>

            <RadioGroup
                android:id="@+id/furniture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp">

                <RadioButton
                    android:id="@+id/radio_part_furnished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/part_furnished"/>
                <RadioButton
                    android:id="@+id/radio_unfurnished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unfurnished"/>
                <RadioButton
                    android:id="@+id/radio_furnished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/furnished"/>
            </RadioGroup>


            <TextView
                android:id="@+id/label_priceByMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/priceByMonth" />

            <EditText
                android:id="@+id/priceByMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:ems="10"
                android:inputType="number"
                android:autofillHints="no"
                android:hint="" />


            <TextView
                android:id="@+id/label_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/note" />

            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="text"
                android:autofillHints="no"/>

            <TextView
                android:id="@+id/label_reporterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/reporterName" />

            <EditText
                android:id="@+id/reporterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="text"
                android:autofillHints="no"/>

            <TextView
                android:id="@+id/label_createdAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/createdAt" />

            <EditText
                android:id="@+id/createdAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:ems="10"
                android:text=""
                android:importantForAutofill="no"
                android:inputType="date"/>

            <Button
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="21dp"
                android:text="@string/submit" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>